{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Android",
      "request": "launch",
      "type": "reactnative",
      "platform": "android",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/.vscode/.react"],
      "trace": "verbose"
    },
    {
      "name": "Debug iOS",
      "request": "launch",
      "type": "reactnative",
      "platform": "ios",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/.vscode/.react"],
      "trace": "verbose"
    },
    {
      "name": "Attach to Packager",
      "type": "reactnative",
      "request": "attach",
      "port": 8081,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/.vscode/.react"]
    }
  ]
}
